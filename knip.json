{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "ignoreExportsUsedInFile": {
    "interface": true,
    "type": true
  },
  "tags": ["-lintignore"],
  "workspaces": {
    "apps/*": {
      "entry": ["src/{index,main}.{ts,tsx}"],
      "project": ["src/**/*.{ts,tsx}"]
    },
    "packages/*": {
      "entry": ["src/{index,main}.ts"],
      "project": ["src/**/*.{ts,tsx}"]
    }
  }
}
